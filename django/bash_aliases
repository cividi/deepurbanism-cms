# Django Aliases
alias dj="django-admin.py"
alias djm="django-admin.py migrate"
alias djr="django-admin.py runserver 0.0.0.0:8000"

# Print Message
# Pass format specifies to printf which tells printf to take each argument it
# gets and print it, followed by a newline.
printf "%s\n" \
  "Here are some common aliases for our stack:" \
  'dj="django-admin.py"' \
  'djm="django-admin.py migrate"' \
  'djr="django-admin.py runserver 0.0.0.0:8000"'
